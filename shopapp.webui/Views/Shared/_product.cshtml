 @model Product
 <div class="card mb-2">
    <img src="~/img/@Model.ImageUrl" alt="" class="card-img-top">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
        @* href="/product/details/@Model.ProductId" *@
        <a asp-controller="Product" asp-action="Details" asp-route-id= "@Model.ProductId" class="btn btn-primary btn-sm">Ä°ncele</a>
        <a asp-controller="Product" asp-action="Edit" asp-route-id= "@Model.ProductId" class="btn btn-primary btn-sm">Edit</a>


        <form method="post" action="/product/delete" style="display: inline;">
            <input type="hidden" name="ProductId" value="@Model.ProductId">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>
    </div>
</div> 